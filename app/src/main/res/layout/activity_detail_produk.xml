<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailproduk.DetailProduk"
>

<androidx.core.widget.NestedScrollView
    android:layout_below="@id/trasparenheader"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivProductDetailImage"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/bukuproduk"
            android:scaleType="fitXY"

            />
    <androidx.cardview.widget.CardView
        android:layout_below="@+id/ivProductDetailImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        >

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvjudulprduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buku tulis campus merah"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_marginBottom="10dp"
                android:layout_below="@id/tvjudulprduk"
                android:id="@+id/deskripsiproduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.47.000"
                android:textSize="15dp"
                android:textColor="@android:color/holo_red_light"
                />
            <LinearLayout
                android:layout_below="@+id/deskripsiproduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                android:layout_below="@id/deskripsiproduk"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_below="@id/deskripsiproduk"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_below="@id/deskripsiproduk"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_below="@id/deskripsiproduk"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_baseline_star_half_24"/>
                <ImageView
                    android:layout_below="@id/deskripsiproduk"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_baseline_star_border_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text=" 3.5(90) "/>
                <ImageView

                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottomborder"
                    />
                <TextView
                    android:textStyle="bold"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text=" 90 terjual"
                    />

            </LinearLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="1dp"
            >
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasi Produk"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    />
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="Ukuran"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="175x25mm"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="Bahan"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HVS 70 gr, 64 halaman"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="Berat"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="	0.14 kg"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="Dimensi"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="	15 x 21 cm"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        >
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produk Serupa"
            android:textColor="@android:color/black"
            android:textStyle="bold"

            android:layout_marginBottom="10dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProdukserupa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            />


    </LinearLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/trasparenheader"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <androidx.cardview.widget.CardView

            android:id="@+id/searchproduk"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:cardCornerRadius="6dp"
            android:layout_toLeftOf="@+id/shoping_cart">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_search_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cari Produk"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/shoping_cart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_twotone_shopping_cart_24_orange"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <androidx.cardview.widget.CardView


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:cardCornerRadius="0dp"
            >
            <RelativeLayout
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonbuy"
                android:layout_toLeftOf="@id/buttoncart"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:text="Beli sekarang"
                android:textColor="@android:color/white"
                android:fontFamily="casual"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent"
                />

                <Button
                    android:background="@color/biru"
                    android:id="@+id/buttoncart"
                    android:layout_toLeftOf="@id/chatbutton"
                    android:layout_centerHorizontal="true"
                    android:text="Kerangjang"
                    android:textSize="10dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="casual"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    />

                <Button
                    android:text="What's app"
                    android:textColor="@android:color/white"
                    android:fontFamily="casual"
                    android:background="@color/biru"
                    android:textSize="10dp"
                    android:id="@+id/chatbutton"

                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</RelativeLayout>