<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.RegisterActivity">


    <TextView
        style="@style/headerTextPrimary"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif"
        android:gravity="start"
        android:text="Register"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_marginTop="100dp"
        style="@style/linearParent"
        android:layout_gravity="center"
        android:padding="@dimen/loginViewsMargin">





        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputfirstname"
            style="@style/parent"
            >
            <EditText
                android:id="@+id/editTextFirstname"
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="First Name"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputlastname"
            style="@style/parent"
            >
            <EditText
                android:id="@+id/editTextLastname"
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Last Name"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputEmail"
            style="@style/parent"
            >
            <EditText
                android:id="@+id/editTextEmail"
                style="@style/modifiedEditText"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:hint="Email"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputnumbphone"
            style="@style/parent"
           >
            <EditText
                android:id="@+id/editTextnumbphone"
                style="@style/modifiedEditText"
                android:inputType="number"
                android:maxLines="1"
                android:hint="Number Phone"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputPassword"
            style="@style/parent"
            android:orientation="horizontal"

            app:passwordToggleEnabled="true"
            >
            <EditText
                android:id="@+id/editTextPassword"
                style="@style/modifiedEditText"
                android:hint="Password"
                android:maxLines="1"
                android:inputType="textPassword"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/forgotpasssword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/viewParent"
            android:text="Forgot Password?"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/newsMoreTextSize"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"/>
        <!--            android:onClick="viewForgotPAssword"-->

        <Button
            android:id="@+id/registerbutton"
            android:layout_width="290dp"
            android:layout_height="45dp"
            style="@style/loginButton"
            android:text="Register"

            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

        <TextView

            style="@style/parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="or"
            />
        <Button
            android:id="@+id/google_button"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:text="Register with google"

            android:drawableLeft="@drawable/googleiconsedang"
            android:paddingLeft="60dp"

            android:textAlignment="viewStart"
            android:background="@drawable/google_login"
            android:layout_gravity="center_horizontal"
            />
        <!--            <TextView-->
        <!--                style="@style/parent"-->
        <!--                android:textAlignment="center"-->
        <!--                android:textStyle="bold"-->
        <!--                android:text="Lupa Password? "-->
        <!--                android:layout_marginTop="@dimen/loginViewsMargin"/>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Sudah punya akun ?"
                />
            <TextView
                android:id="@+id/loginbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:text="Login"
                android:textColor="@android:color/black"
                />
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>