<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    tools:context=".ui.profile.ProfileFragment">
\\akun-kamu

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/akunkamu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@android:color/black"
            android:textSize="20dp"

            android:text="Akun Kamu"/>
//top-rigth
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_baseline_notifications_24"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_baseline_settings_24"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_message_24"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/namawrap"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/akunkamu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_baseline_account_box_24"
            />
        <TextView
            android:id="@+id/loginbuttonname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dimas Syahadillah Ghiaraka"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_edit_24"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
        />



    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/transaksiwrap"
        android:layout_marginTop="5dp"
        android:layout_below="@id/namawrap"

        android:layout_marginBottom="5dp"

        android:layout_width="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi"

            android:textSize="22dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:fontFamily="casual"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Riwayat Transaksi"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />


        </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menunggu pembayaran"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_baseline_attach_money_24"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pembelian"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_baseline_attach_money_24"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ulasan"
                android:textSize="20dp"
android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_baseline_rate_review_24"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="casual"
                android:text="Komplain"
                android:drawableLeft="@drawable/ic_baseline_rate_review_24"
                android:textColor="@android:color/black"
                android:textSize="20dp"
android:layout_marginBottom="10dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/favwrap"

        android:layout_marginTop="5dp"
        android:layout_below="@id/transaksiwrap"

        android:layout_marginBottom="5dp"

        android:layout_width="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorit kamu"
                android:textSize="22dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:fontFamily="casual"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bacaan Favorit"
                android:drawableLeft="@drawable/ic_twotone_shopping_cart_24_orange"
                android:textSize="20dp"
android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wishlist"
                android:drawableLeft="@drawable/ic_twotone_shopping_cart_24_orange"
                android:textSize="20dp"
android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barang yang sering anda lihat"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_twotone_shopping_cart_24_orange"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barang Terakhir Dilihat"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:drawableLeft="@drawable/ic_twotone_shopping_cart_24_orange"
                android:fontFamily="casual"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/lainyawrap"

        android:layout_marginTop="5dp"
        android:layout_below="@id/favwrap"

        android:layout_marginBottom="5dp"

        android:layout_width="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lainya"
                    android:textSize="22dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:fontFamily="casual"
                    />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengaturan"
                android:drawableLeft="@drawable/ic_baseline_settings_24"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bantuan SUMA"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_baseline_message_24"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tentang Kami"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_baseline_rate_review_24"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/rekomendasiproduk"
        android:layout_below="@id/lainyawrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REKOMENDASI PRODUK"
        android:layout_margin="10dp"
        android:textSize="20dp"
android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/rekomendasiproduk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_shop"
        />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>